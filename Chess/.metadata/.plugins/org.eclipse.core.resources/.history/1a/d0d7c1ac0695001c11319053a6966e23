package game;

import java.util.List;
import java.util.Random;

import gui.RunningGUI;

public class Main {

	public static void main(String[] args) throws IllegalMoveException {
		
		long t0 = System.currentTimeMillis();

		Board board = new Board();
		board.newGameBoard();
		
		board.board[6][4].movePiece(board, 6, 4, 4, 4);
		board.board[1][3].movePiece(board, 1, 3, 3, 3);

		List<Move> captures = board.allCaptureMoves();
		for (Move capture : captures) {
			capture.display();
		}
		// board.playInConsole();
		
		board.display();
		long t1 = System.currentTimeMillis();
		System.out.println("Total time: " + (t1 - t0) + " ms");
	}
	
	public void randomMoves(Board board) {
		List<Move> moves = board.allLegalMoves();
		while (moves.size() > 0) {
			Random rand = new Random();
			Move chosenMove = moves.get(rand.nextInt(moves.size()));
			chosenMove.playMove(board);
			board.display();
			moves = board.allLegalMoves();
		}
	}
}
