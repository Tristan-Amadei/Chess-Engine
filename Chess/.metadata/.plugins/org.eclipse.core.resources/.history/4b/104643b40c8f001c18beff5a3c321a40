package game.adversary;

import game.pieces.PieceTypeClass.PieceType;

public class Evaluation {
	
	public static double piecesEvaluation(PieceType piece) {
		switch(piece) {
		case Pawn:
			return 100;
			break;
		case Knight:
			return 320;
			break;
		case Bishop:
			return 330;
			break;
		case Rook:
			return 500;
			break;
		case Queen:
			return 900;
			break;
		case King:
			return Double.POSITIVE_INFINITY;
			break;
	}

}
