package game.adversary;

import game.*;
import game.pieces.*;

public class Evaluation {
	
	public static double piecesEvaluation(Piece piece) {
		int color_coefficient;
		if (piece.getColor()) {
			color_coefficient = 1;
		} else {
			color_coefficient = -1;
		}
		switch(piece.getType()) {
		case Pawn:
			return 100;
		case Knight:
			return 320;
		case Bishop:
			return 330;
		case Rook:
			return 500;
		case Queen:
			return 900;
		case King:
			return Double.POSITIVE_INFINITY;
		}
		return 0;
	}
	
	public static double boardEvaluation(Board board) {
		
	}
}
