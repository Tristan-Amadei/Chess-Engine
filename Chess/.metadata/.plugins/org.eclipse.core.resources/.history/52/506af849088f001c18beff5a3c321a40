package game.tests;

import game.*;
import game.pieces.*;
import game.tests.GamePlay;

public class RunningTests {

	public static void main(String[] args) {
		
		Board testBoard = new Board();
		testBoard.newGameBoard();
		int depth = 2;
		
		long t0 = System.currentTimeMillis();
		int final_nbMoves = 0;
		for (int line=0; line<8; line++) {
			for (int col=0; col<8; col++) {
				GamePlay new_thread = new GamePlay(testBoard, line, col, depth, 0);
				new_thread.run();
				final_nbMoves += new_thread.nbOfMoves;
			}
		}
		long t1 = System.currentTimeMillis();
		System.out.println("Total time: " + (t1-t0) + " ms for depth " + depth);
		System.out.println("Number of moves for depth " + depth + ": " + final_nbMoves + "\n");
		
		/*
		for (int depth = 2; depth<3; depth++) {
			long t0 = System.currentTimeMillis();

			int nbOfMoves = GamePlay.numberOfMoves(testBoard, depth);
			long t1 = System.currentTimeMillis();
			System.out.println("Total time: " + (t1-t0) + " ms for depth " + depth);
			System.out.println("Number of moves for depth " + depth + ": " + nbOfMoves + "\n");
		} */
		
	}

}
